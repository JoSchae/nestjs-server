# Production Environment Configuration Template
# DO NOT COMMIT THIS FILE TO GIT - Contains production secrets
# Copy this template to .env.prod and fill with your actual production values

NODE_ENV=prod
SERVER_PORT=3000

# MongoDB Configuration
MONGO_DB_PORT=27017
MONGO_DB_HOSTNAME=mongodb
MONGO_DB_DATABASE=your_production_database_name

# MongoDB Users (FILL WITH SECURE PRODUCTION VALUES)
MONGO_INITDB_ROOT_USERNAME=root
MONGO_INITDB_ROOT_PASSWORD=your_secure_production_root_password

MONGO_DB_USERNAME=prod_user
MONGO_DB_PASSWORD=your_secure_production_user_password

MONGO_DB_ADMIN_USERNAME=prod_admin
MONGO_DB_ADMINUSER_PASSWORD=your_secure_production_admin_password

MONGO_DB_METRICS_USERNAME=prod_metrics
MONGO_DB_METRICS_PASSWORD=your_secure_production_metrics_password

# JWT Configuration (FILL WITH SECURE PRODUCTION VALUES)
JWT_SECRET=your_very_secure_production_jwt_secret_at_least_32_characters_long
JWT_EXPIRATION=3600s

RATE_LIMIT_TTL=60000
RATE_LIMIT_MAX=100
AUTH_RATE_LIMIT_TTL=60000
AUTH_RATE_LIMIT_MAX=3
USER_CREATION_RATE_LIMIT_TTL=60000
USER_CREATION_RATE_LIMIT_MAX=3

# Cache Configuration
CACHE_TTL_SHORT=60        # 1 minute - for frequently changing data
CACHE_TTL_MEDIUM=300      # 5 minutes - for moderately stable data
CACHE_TTL_LONG=3600       # 1 hour - for rarely changing data (roles, permissions)
CACHE_TTL_VERY_LONG=86400 # 24 hours - for static/seed data
CACHE_MAX_ITEMS=1000      # Maximum items in cache (prevent memory overflow)
