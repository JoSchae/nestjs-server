# Local Development Environment Configuration
# This file is safe to commit to Git - contains no production secrets

NODE_ENV=dev
SERVER_PORT=3000

# Logging Configuration
# Levels: error, warn, info, debug, verbose
# Production: error or warn, Development: debug or verbose
LOG_LEVEL=debug

# MongoDB Configuration
MONGO_DB_PORT=27017
MONGO_DB_HOSTNAME=mongodb
MONGO_DB_DATABASE=nestjs_local

# MongoDB Users (local values - not sensitive)
MONGO_INITDB_ROOT_USERNAME=root
MONGO_INITDB_ROOT_PASSWORD=local_root_pass

MONGO_DB_USERNAME=local_user
MONGO_DB_PASSWORD=local_user_pass

MONGO_DB_ADMIN_USERNAME=system@admin.com
MONGO_DB_ADMINUSER_PASSWORD=SystemAdmin123!

MONGO_DB_METRICS_USERNAME=monitoring@system.com
MONGO_DB_METRICS_PASSWORD=MonitoringSystem123!
MONGO_DB_METRICS_PASSWORD_URLENC=MonitoringSystem123%21

MONGODB_AUTH_SOURCE=admin

# JWT Configuration (local - not sensitive)
JWT_SECRET=local_jwt_secret_for_development_only_not_secure
JWT_EXPIRATION=3600s

RATE_LIMIT_TTL=60000
RATE_LIMIT_MAX=100
AUTH_RATE_LIMIT_TTL=60000
AUTH_RATE_LIMIT_MAX=3
USER_CREATION_RATE_LIMIT_TTL=60000
USER_CREATION_RATE_LIMIT_MAX=3

# Cache Configuration
CACHE_TTL_SHORT=60        # 1 minute - for frequently changing data
CACHE_TTL_MEDIUM=300      # 5 minutes - for moderately stable data
CACHE_TTL_LONG=3600       # 1 hour - for rarely changing data (roles, permissions)
CACHE_TTL_VERY_LONG=86400 # 24 hours - for static/seed data
CACHE_MAX_ITEMS=1000      # Maximum items in cache (prevent memory overflow)
